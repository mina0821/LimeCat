<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.mina.limecatapplication.WelcomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datemsg"
        android:text="Enter Date"
        android:textAppearance="?android:textAppearanceLarge"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/selectTime"
        android:layout_alignStart="@+id/selectTime"
        android:layout_marginTop="13dp" />

    <EditText
        android:id="@+id/msg_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter date (ex.19)"

        android:layout_below="@+id/datemsg"
        />

    <EditText
        android:id="@+id/msg_text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter month (ex.12)"

        android:layout_toRightOf="@+id/msg_text_date"
        android:layout_alignBottom="@+id/msg_text_date"
        />

    <EditText
        android:id="@+id/msg_text_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter year (ex.1985)"

        android:layout_below="@+id/msg_text_date"
        />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:onClick="sendMessage"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Time period:"
        android:textAppearance="?android:textAppearanceLarge"

        android:id="@+id/selectTime"
        android:layout_below="@+id/msg_text_year"
        android:layout_alignRight="@+id/send"
        android:layout_alignEnd="@+id/send" />


    <RadioGroup
        android:id="@+id/timeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectTime">

        <RadioButton
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1986-2005"
            />

        <RadioButton
            android:id="@+id/future"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2040-2069"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Climate Model:"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/selectModel"

        android:layout_below="@+id/timeGroup"
        android:layout_alignLeft="@+id/selectTime"
        android:layout_alignStart="@+id/selectTime"
        android:layout_marginTop="15dp" />


    <RadioGroup
        android:id="@+id/modelGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/selectModel">

        <RadioButton
            android:id="@+id/Can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CanESM2"
            />

        <RadioButton
            android:id="@+id/GFDL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GFDL-ESM2M"
            />

        <RadioButton
            android:id="@+id/Had"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HadGEM2-ES"
            />

        <RadioButton
            android:id="@+id/IPSL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPSL-CM5A-LA"
            />

        <RadioButton
            android:id="@+id/MPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MPI-ESM-MR"
            />
    </RadioGroup>


</RelativeLayout>
