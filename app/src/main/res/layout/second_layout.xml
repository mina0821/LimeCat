<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mina.limecatapplication.SecondActivity">

    <LinearLayout
        android:id="@+id/chart_present"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="300dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart_future"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="300dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart_compare"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="300dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chart_present">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            android:text="Please select the time frame you want to show."
            android:textAppearance="?android:textAppearanceLarge"
            />
    </LinearLayout>


    <Button
        android:id="@+id/present"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/future"
        android:layout_centerHorizontal="true"
        android:onClick="showPresent"
        android:text="Present" />

    <Button
        android:id="@+id/future"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/compare"
        android:layout_centerHorizontal="true"
        android:onClick="showFuture"
        android:text="Future" />

    <Button
        android:id="@+id/compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showCompare"
        android:text="Combine"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
